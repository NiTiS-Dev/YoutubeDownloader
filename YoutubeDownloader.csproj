<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net6.0</TargetFramework>
		<LangVersion>latest</LangVersion>
		<AssemblyName>YoutubeDownloader</AssemblyName>
		<Authors>NiTiS-Dev</Authors>
		<Version>1.0.0</Version>
		<AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
		<AppendRuntimeIdentifierToOutputPath>false</AppendRuntimeIdentifierToOutputPath>
	</PropertyGroup>


	<ItemGroup>
		<PackageReference Include="CommandLineParser" Version="2.9.1" />
		<PackageReference Include="NiTiS.IO" Version="2.0.3" />
		<PackageReference Include="YoutubeExplode" Version="6.2.2" />
		<PackageReference Include="YoutubeExplode.Converter" Version="6.2.2" />
	</ItemGroup>


	<ItemGroup>
		<None Update="images\*.png">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>
</Project>